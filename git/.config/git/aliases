[alias]
F = fetch --prune --all
a = add
b = branch
cl = clone
co = checkout
cp = cherry-pick
d = diff
f = fuzzy
ls = ls-files
lsi = ls-files --others --ignored --exclude-standard
m = merge
p = push
pu = pull --prune --all
r = reset
s = status --short
st = stash

send = !git pu && git au && git c && git p
reset-author = c --amend --reset-author --no-edit
conflicts = d --name-only --diff-filter=U
optimize = gc --prune=now --aggressive
rc = config --local --unset credential.helper
root = rev-parse --show-toplevel
tear = !git r --hard && git clean -f
