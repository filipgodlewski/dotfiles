[alias]
a = add
aa = add --all
ap = add --patch

b = branch
ba = branch -a
bc = branch --show-current
bd = !sh -c 'git b | rg -v "–merged\\|\\\\*" | sort | fzf -m | xargs git b -D' --
br = branch -r

c = commit -v
ca = commit --amend
cam = commit --amend --message
cane = commit --amend --no-edit

cl = clean
cleanup = !git reset --hard && git clean -f

co = checkout
cob = checkout -b
col = !sh -c 'git b | rg -v "–merged\\|\\\\*" | sort | fzf | xargs git checkout' --
cor = !"git br | rg -v HEAD | sort | fzf | xargs git checkout -t"

ctags = !.git/hooks/ctags

d = diff
dc = diff --cached
ds = diff --staged
dw = diff --word-diff

f = fetch
fpa = fetch --prune --all

g = grep

l = log
ll = log --oneline --abbrev-commit --all --graph --decorate --color
lo = log --oneline

ls = ls-files
lsi = ls-files --others --i --exclude-standard

m = merge

p = pull

publish = !"git push -u origin \"$(git bc)\""

r = reset
rh = reset --hard

rb = rebase
rba = rebase --abort
rbc = rebase --continue
rbi = rebase --interactive
rbs = rebase --skip

s = status
ss = status --short
ssb = status --short --branch

sm = submodule
sma = submodule add
smi = submodule init

sta = stash apply
stb = stash branch
stc = stash clear
std = stash drop
stl = stash list
stp = stash pop
sts = stash save
