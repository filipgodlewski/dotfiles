root = true

[*]
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{go,sql}]
indent_style = tab

[Makefile]
indent_style = tab

[*.md]
insert_final_newline = false

[*.out]
insert_final_newline = unset
trim_trailing_whitespace = unset

[*.json]
insert_final_newline = false
