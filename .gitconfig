[core]
        editor = "nvim"
[diff]
        tool = vimdiff
[help]
        autocorrect = 1
[include]
        path = ".config/git/aliases"
[merge]
        tool = vim_mergetool
        conflictStyle = diff3
[mergetool]
        keepBackup = false
        prompt = false
[mergetool "vim_mergetool"]
        cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
        trustExitCode = true
[user]
        # name =
        # email =

[pull]
	ff = only

