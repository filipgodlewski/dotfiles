[alias]
b = branch
c = commit -v
co = checkout
d = diff
f = fetch --prune --all
ls = ls-files
lsi = ls-files --others --ignored --exclude-standard
m = merge
p = pull --prune --all
P = push
s = status --short
sm = submodule
st = stash

conflicts = diff --name-only --diff-filter=U
optimize = gc --prune=now --aggressive
rc = config --local --unset credential.helper
root = rev-parse --show-toplevel
tear = !git reset --hard && git clean -f
