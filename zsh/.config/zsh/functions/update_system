echo "\n>>> npm\n"
npm install -g npm
npm update --global
npm audit fix
echo "\n>>> brew\n"
brew update
brew upgrade
brew upgrade --cask
brew cleanup
echo "\n>>> git submodules\n"
cd ~/dotfiles
git sub-up
cd -
echo "\n>>> git submodules :: additional actions\n"
cd ~/.local/share/nvim/site/pack/plugins/start/telescope-fzf-native.nvim
cmake -S. -Bbuild -DCMAKE_BUILD_TYPE=Release && cmake --build build --config Release && cmake --install build --prefix build
cd -
echo "\n>>> nvim\n"
nvim -c "UpdateRemotePlugins | q"
echo "\n>>> zsh\n"
exec zsh

