[alias]
  a = add
  aa = add --all
  ap = add --patch
  au = add --update # only tracked

  b = branch
  ba = branch --all
  bc = branch --show-current
  bd = config init.defaultBranch # default branch
  bm = branch --merged
  bnm = branch --no-merged

  c = commit
  ca = commit --amend
  cam = commit --amend --message
  cane = commit --amend --no-edit
  carane = commit --amend --reset-author --no-edit
  ci = commit --interactive
  cm = commit --message

  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  cpn = cherry-pick --no-commit

  d = diff
  dc = diff --cached
  ds = diff --staged
  dw = diff --word-diff
  du = diff --name-only --diff-filter=U # show conflicts

  f = fetch
  fa = fetch --all
  fap = fetch --all --prune

  fz = fuzzy

  g = grep
  gn = grep --line-number

  l = log
  lg = log --graph
  lgo = log --graph --all --oneline --decorate
  lo = log --oneline
  lor = log --oneline --reverse
  lp = log --patch
  lfp = log --first-parent
  lto = log --topo-order

  ls = ls-files
  lsd = ls-files --debug
  lsfn = ls-files --full-name
  lsio = ls-files --others --ignored --exclude-standard # list files that git has ignored

  m = merge
  ma = merge --abort
  mc = merge --continue
  mncnf = merge --no-commit --no-ff

  o = checkout
  ob = checkout --branch

  p = pull
  pf = pull --ff-only
  ppa = pull --prune --all

  r = reset
  rs = reset --soft
  rh = reset --hard
  reset-totally = !git reset --hard && git clean -f
  reset-creds = config --local --unset credential.helper

  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbs = rebase --skip
  rbi = rebase --interactive

  rr = remote
  rrs = remote show
  rru = remote update
  rrp = remote prune

  s = status
  ss = status --short
  ssb = status --short --branch

  st = stash
  stl = stash list
  stp = stash pop

  w = whatchanged

  fix = !cd `git rev-parse --show-toplevel` && git diff --name-only --diff-filter=U | xargs nvim -p; cd -
  gone = !git config init.defaultBranch && git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D
  news = !git stash && git checkout `git main` && git pull --prune --all && git checkout - && git stash pop
  optimize = gc --prune=now --aggressive
  root = rev-parse --show-toplevel
  send = !git pull --prune --all && git add --update && git cz && git push


# vim:ft=gitconfig
