[core]
  editor = nvim
[help]
  autocorrect = 1
[init]
  templatedir = ~/.config/git/template
  defaultBranch = main
[include]
  path = ~/.config/git/aliases
[merge]
  tool = vim_mergetool
  conflictStyle = diff3
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "vim_mergetool"]
  cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
  trustExitCode = true
[push]
  autoSetupRemote = true
[pull]
  ff = only
