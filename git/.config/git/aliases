[alias]
a = add
b = branch
cl = clone
co = checkout
cp = cherry-pick
d = diff
f = fuzzy
fp = fetch --prune --all
ls = ls-files
lsi = ls-files --others --ignored --exclude-standard
m = merge
p = push
ps = !git pu && git au && git c && git p
pu = pull --prune --all
r = reset
s = status --short
st = stash

gone = !git main && git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D
main = !git branch -rl "*/HEAD" | rev | cut -d/ -f1 | rev
news = !git st && git co `git main` && git pu && git co - && git st pop
optimize = gc --prune=now --aggressive
reset-author = c --amend --reset-author --no-edit
reset-credentials = config --local --unset credential.helper
root = rev-parse --show-toplevel
tear = !git r --hard && git clean -f
war = d --name-only --diff-filter=U
fix = !cd `git root` && git war | xargs nvim -p; cd -
