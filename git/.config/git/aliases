[alias]
a = add
b = branch
co = checkout
d = diff
f = fetch --prune --all
ls = ls-files
lsi = ls-files --others --ignored --exclude-standard
m = merge
pl = pull --prune --all
ps = push
s = status --short
sm = submodule
st = stash

acp = !git au && git c && git push
reset-author = commit --amend --reset-author --no-edit
conflicts = diff --name-only --diff-filter=U
optimize = gc --prune=now --aggressive
rc = config --local --unset credential.helper
root = rev-parse --show-toplevel
tear = !git reset --hard && git clean -f
